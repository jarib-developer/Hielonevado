# .editorconfig

# Asegúrate de que todos los desarrolladores usen estas reglas
root = true

# Reglas para todos los archivos
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Archivos Markdown o similares (no eliminar espacios al final)
[*.md]
trim_trailing_whitespace = false

# Archivos JSON (VSCode usa 2 espacios por defecto)
[*.json]
indent_size = 2

# Archivos YAML
[*.yml]
indent_size = 2

# Archivos de configuración de VSCode
[*.code-workspace]
indent_size = 2